@model TP3.Core.Data.Challenge.ChallengeData
@if (Model != null && Model.Elements != null && Model.Elements.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>@Html.DisplayNameFor(model => model.Elements.FirstOrDefault().Name)</th>
                <th>@Html.DisplayNameFor(model => model.Elements.FirstOrDefault().Quantity)</th>
            </tr>
        </thead>
        <tbody>
            @{
                @for (int i = 0; i < Model.Elements.Count; i++)
                {
                    <tr>
                        <td>
                            <div class="kt-checkbox-inline">
                                <label class="kt-checkbox">
                                    <input asp-for="Elements[i].IsSelect" onclick="updateElement()">
                                    <span></span>
                                </label>
                            </div>
                        </td>
                        <td>
                            <input type="hidden" asp-for="Elements[i].ElementId" />
                            <input type="hidden" asp-for="Elements[i].Name" />
                            <input type="text" asp-for="Elements[i].Name" readonly class="form-control" placeholder="@Html.DisplayNameFor(m => m.Elements.FirstOrDefault().Name)" />
                        </td>
                        <td>
                            <input type="text" asp-for="Elements[i].Quantity" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Elements.FirstOrDefault().Quantity)" />
                        </td>
                        

                    </tr>
                }
            }
        </tbody>
    </table>
}
