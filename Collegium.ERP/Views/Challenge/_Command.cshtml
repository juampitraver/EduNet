@model TP3.Core.Data.Challenge.ChallengeData
@if (Model != null && Model.Commands != null && Model.Commands.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>@Html.DisplayNameFor(model => model.Commands.FirstOrDefault().Name)</th>
            </tr>
        </thead>
        <tbody>
            @{
                @for (int i = 0; i < Model.Commands.Count; i++)
                {
                    <tr>
                        <td>
                            <div class="kt-checkbox-inline">
                                <label class="kt-checkbox">
                                    <input asp-for="Commands[i].IsSelect" onclick="updateCommand()">
                                    <span></span>
                                </label>
                            </div>
                        </td>
                        <td>
                            <input type="hidden" asp-for="Commands[i].CommandId" />
                            <input type="hidden" asp-for="Commands[i].Name" />
                            <input type="text" asp-for="Commands[i].Name" readonly class="form-control" placeholder="@Html.DisplayNameFor(m => m.Commands.FirstOrDefault().Name)" />
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
