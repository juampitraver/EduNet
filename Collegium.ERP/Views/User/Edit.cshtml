@model TP3.Core.Data.User.UserEditData
<!--begin::Portlet-->
<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Editar Usuario
            </h3>
        </div>
    </div>
    <!--begin::Form-->
    <form class="kt-form" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserName" />
        <div class="kt-portlet__body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="UserName" class="col-md-12 control-label"></label>
                        <input value="@Model.UserName" disabled class="form-control" placeholder="Usuario">
                        <span asp-validation-for="UserName" class="invalid-feedback"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ChangePassword"></label>
                        <div class="kt-checkbox-inline">
                            <label class="kt-checkbox">
                                <input asp-for="ChangePassword" id="checkPassword" onclick="visiblePassword()">
                                <span></span>
                            </label>
                        </div>

                    </div>
                    <div class="form-group password" style="display:none">
                        <label asp-for="Password" class="col-md-12 control-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Contraseña">
                        <span asp-validation-for="Password" class="invalid-feedback"></span>
                    </div>
                    <div class="form-group password" style="display:none">
                        <label asp-for="RepeatPassword" class="col-md-12 control-label"></label>
                        <input asp-for="RepeatPassword" class="form-control" placeholder="Contraseña">
                        <span asp-validation-for="RepeatPassword" class="invalid-feedback"></span>
                    </div>

                </div>

                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="RoleId" class="col-md-12 control-label"></label>
                        <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(@ViewBag.Roles,"Id", "Name"))">
                            <option value="" hidden disabled selected>Seleccione un rol</option>
                        </select>
                        <span asp-validation-for="RoleId" class="invalid-feedback"></span>
                    </div>
                </div>
            </div>


        </div>
        <div class="kt-portlet__foot">
            <div class="kt-form__actions">
                <button type="submit" class="btn btn-success">Aceptar</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </div>
    </form>
    <!--end::Form-->
</div>
<!--end::Portlet-->
@section Scripts{
    <script>
        function visiblePassword() {
            if ($('#checkPassword').is(':checked')) {
                $(".password").show();
            }
            else {
                $(".password").hide();
            }
        }
    </script>
}
